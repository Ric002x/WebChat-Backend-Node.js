// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "sqlite"
}

enum UserRole {
  USER
  ADMIN
}

model User {
  id       Int       @id @default(autoincrement())
  email    String    @unique
  avatar   String    @default("/static/images/avatar/default.png")
  name     String
  username String    @unique
  birthday DateTime?
  password String

  role UserRole @default(USER)

  createdAt         DateTime  @default(now())
  updatedAt         DateTime?
  passwordUpdatedAt DateTime?
  lastAccess        DateTime  @default(now())

  chatMessages ChatMessage[]
  userOneChats Chat[]        @relation("UserOne")
  userTwoChats Chat[]        @relation("UserTwo")
}

model Chat {
  id           Int           @id @default(autoincrement())
  createdAt    DateTime
  chatMessages ChatMessage[]

  userOneId Int
  userOne   User @relation("UserOne", fields: [userOneId], references: [id])

  UserTwoId Int
  UserTwo   User @relation("UserTwo", fields: [UserTwoId], references: [id])
}

model ChatMessage {
  id        Int       @id @default(autoincrement())
  body      String
  chatId    Int
  userId    Int
  createdAt DateTime  @default(now())
  updatedAt DateTime?

  user User @relation(fields: [chatId], references: [id])
  chat Chat @relation(fields: [chatId], references: [id])

  @@index([chatId])
}
